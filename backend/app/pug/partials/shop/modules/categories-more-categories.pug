.ps-product-list.ps-product-list--2.ps-more-categories
    .ps-section__header
        h3 Best Seller Items
        ul.ps-section__links
            li: a(href='shop-grid.html') Clothing & Apparel
            li: a(href='shop-grid.html') Garden & Kitchen
            li: a(href='shop-grid.html') Consumer Electrics
    .ps-section__content
        each category, index in shop_categories
            if index > 1 && index < 7
                .ps-block--category-vertical
                    .ps-block__thumbnail: img(src=category.thumbnail alt="")
                    .ps-block__content
                        h4 #{category.title}
                        ul
                            each link in category.links
                                li: a(href='shop-default.html') #{link}
                        a(href='#') Shop All