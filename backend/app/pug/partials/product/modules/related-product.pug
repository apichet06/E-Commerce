.ps-section--default
    .ps-section__header
        h3 Related products
    .ps-section__content
        .ps-carousel--nav.owl-slider(
        data-owl-auto= 'true',
        data-owl-loop= 'true',
        data-owl-speed= '10000',
        data-owl-gap= '30',
        data-owl-nav= 'true',
        data-owl-dots= 'true',
        data-owl-item= '6',
        data-owl-item-xs= '2',
        data-owl-item-sm= '2',
        data-owl-item-md= '3',
        data-owl-item-lg= '4',
        data-owl-item-xl= '5',
        data-owl-duration= '1000',
        data-owl-mousedrag= 'on'
        )
            each val, index in shop_products
                if index > 10 && index < 20
                    +product(val)