.ps-contact-form
    .container
        form(action="index.html" method="get" class="ps-form--contact-us")
            h3 Get In Touch
            .row
                +column({cols: [6, 6, 6, 12, 12]}): .form-group: input.form-control(type="text" placeholder="Name *")
                +column({cols: [6, 6, 6, 12, 12]}): .form-group: input.form-control(type="text" placeholder="Email *")
                +column({cols: [12, 12, 12, 12, 12]}): .form-group: input.form-control(type="text" placeholder="Subject *")
                +column({cols: [12, 12, 12, 12, 12]}): .form-group: textarea.form-control(rows="5" placeholder="Message")
            .form-group.submit
                button.ps-btn Send message