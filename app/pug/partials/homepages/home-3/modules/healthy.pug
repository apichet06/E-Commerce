.ps-block--products-of-category
    .ps-block__categories
        h3 Healthy & Beauty
        ul
            li: a(href='shop-default.html') Best Seller
            li: a(href='shop-default.html') New Arrivals
            li: a(href='shop-default.html') Makeup
            li: a(href='shop-default.html') Skin Care
            li: a(href='shop-default.html') Hair Care
            li: a(href='shop-default.html') Tools & Equipments
            li: a(href='shop-default.html') Perfumer & Cologine
            li: a(href='shop-default.html') Sales & Deals
        a(href='#').ps-block__more-link View All
    .ps-block__slider
        .ps-carousel--product-box.owl-slider(
        data-owl-auto= 'true',
        data-owl-loop= 'true',
        data-owl-speed= '7000',
        data-owl-gap= '0',
        data-owl-nav= 'true',
        data-owl-dots= 'true',
        data-owl-item= '1',
        data-owl-item-xs= '1',
        data-owl-item-sm= '1',
        data-owl-item-md= '1',
        data-owl-item-lg= '1',
        data-owl-duration= '500',
        data-owl-mousedrag= 'off'
        )
            a(href='#'): img(src="img/slider/home-3/healthy-1.jpg" alt="")
            a(href='#'): img(src="img/slider/home-3/healthy-2.jpg" alt="")
            a(href='#'): img(src="img/slider/home-3/healthy-3.jpg" alt="")
    .ps-block__product-box
        each product, index in home_3_healthy
            if index < 6
                +product-simple(product, 'garden')