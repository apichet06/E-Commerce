.ps-product-list.ps-recommend-for-you
    .container
        .ps-section__header
            h3 RECOMMENDED FOR YOU
            ul.ps-section__links
                li: a(href='shop-grid.html') Best Seller
                li: a(href='shop-grid.html') New Arrivals
                li: a(href='shop-grid.html') Top Rated
                li: a(href='shop-grid.html') Trending Products
        .ps-section__content
            .ps-carousel--nav.owl-slider(
            data-owl-auto= 'false',
            data-owl-loop= 'false',
            data-owl-speed= '10000',
            data-owl-gap= '30',
            data-owl-nav= 'true',
            data-owl-dots= 'true',
            data-owl-item= '5',
            data-owl-item-xs= '2',
            data-owl-item-sm= '2',
            data-owl-item-md= '2',
            data-owl-item-lg= '3',
            data-owl-item-xl= '5',
            data-owl-duration= '1000',
            data-owl-mousedrag= 'on'
            )
                each val in home_2_recommend_for_you
                    +product(val)