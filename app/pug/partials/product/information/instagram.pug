.ps-product__info
    h1 Unero Military Classical Backpack
    .ps-product__meta
        p Brand:
            a(href='shop-default.html') Sony
        .ps-product__rating
            +rating(true)
            span (1 review)
    h4.ps-product__price.sale
        | $35.78
        del $42.22
        small  (-16%)
    .ps-product__desc
        p
            | Sold By:
            a(href='shop-default.html').mr-20: strong  Go Pro
            | Status:
            a(href='shop-default.html').mr-20: span.ps-tag--in-stock In-stock
        ul.ps-list--dot
            li  Unrestrained and portable active stereo speaker
            li  Free from the confines of wires and chords
            li  20 hours of portable capabilities
            li  Double-ended Coil Cord with 3.5mm Stereo Plugs Included
            li  3/4″ Dome Tweeters: 2X and 4″ Woofer: 1X
    include ../modules/product-countdown
    .ps-product__shopping
        figure
            figcaption Quantity
            .form-group--number
                button.up: i.fa.fa-plus
                button.down: i.fa.fa-minus
                input.form-control(type="text" placeholder="1")
        a(href='#').ps-btn.ps-btn--gray Add to cart
        a(href='#').ps-btn Buy Now
        .ps-product__actions
            a(href='#'): i.icon-heart
            a(href='#'): i.icon-chart-bars
    .ps-product__specification
        a(href='#').report Report Abuse
        p
            strong SKU:
            |  SF1133569600-1
        p.categories
            strong  Categories:
            a(href='#') Consumer Electronics
            |,
            a(href='#')  Refrigerator
            |,
            a(href='#') Babies & Moms
        p.tags
            strong  Tags
            a(href='#') sofa
            |,
            a(href='#') technologies
            |,
            a(href='#') wireless
    .ps-product__sharing
        a(href='#').facebook: i.fa.fa-facebook
        a(href='#').twitter: i.fa.fa-twitter
        a(href='#').google: i.fa.fa-google-plus
        a(href='#').linkedin: i.fa.fa-linkedin
        a(href='#').instagram: i.fa.fa-instagram