    form(action="do_action" method="post" class="ps-form--post-comment")
        h3 Leave a comment
        .form-group: textarea.form-control(rows="8" placeholder="Your comment *" required)
        .row
            +column({cols: [6, 6, 6, 12, 12]}): .form-group: input.form-control(type="text" placeholder="Your name*")
            +column({cols: [6, 6, 6, 12, 12]}): .form-group: input.form-control(type="text" placeholder="your email*")
            +column({cols: [12, 12, 12, 12, 12]}): .form-group: input.form-control(type="text" placeholder="your website")
        .form-group.submit
